{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./packages/core/src/tsconfig.json",
      "./packages/core/src/tsconfig.test.json",
      "./packages/basic-effects/src/tsconfig.json",
      "./packages/basic-effects/src/tsconfig.test.json",
      "./packages/railway-effects/src/tsconfig.json",
      "./packages/railway-effects/src/tsconfig.test.json",
      "./packages/mithril/src/tsconfig.json",
      "./packages/react/src/tsconfig.json",
      "./packages/eslint-plugin/source/tsconfig.json",
      "./examples/todos/src/tsconfig.json",
      "./examples/todos/src/tsconfig.test.json"
    ]
  },
  "plugins": ["@typescript-eslint", "prettier", "no-null"],
  "extends": [
    "@react-native-community",
    "standard-with-typescript",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/standard",
    "prettier/react"
  ],
  "rules": {
    "@typescript-eslint/space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-param-reassign": "error",
    "no-shadow": "error",
    "prettier/prettier": "warn",
    "no-null/no-null": "error",
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "null": null
        }
      }
    ],
    "@typescript-eslint/promise-function-async": "off",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-non-null-assertion": "error",
    "@typescript-eslint/ban-ts-comment": "error",
    "@typescript-eslint/no-redeclare": "off",
    "@typescript-eslint/switch-exhaustiveness-check": "error",
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "@typescript-eslint/explicit-function-return-type": "off"
  },
  "settings": {
    "react": {
      "version": "16.11.0"
    }
  }
}
